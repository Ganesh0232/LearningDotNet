@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Account/Logout">
        Welcome @User.Identity.Name

        <button type="submit" class="ml-2 btn btn-link " >User Logout</button>
        </form>


}
else
{
    <a class="btn btn-link" asp-page="/Account/Login">User Login </a>
}